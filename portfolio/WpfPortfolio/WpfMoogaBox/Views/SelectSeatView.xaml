            <!-- 선택영화 정보 라벨 -->
            <Grid Grid.Row="3" Grid.Column="1" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="1">
                    <StackPanel Margin="3">
                        <Label Content="영화제목 :" Foreground="White" FontSize="15"/>
                        <Label Content="상영관   :" Foreground="White" FontSize="15"/>
                        <Label Content="상영시간 :" Foreground="White" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Margin="3">
                        <Label Content="{Binding Selected[1]}" Foreground="White" FontSize="15"/>
                        <Label Content="{Binding Selected[2]}" Foreground="White" FontSize="15"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Selected[3]}" Foreground="White" FontSize="15"/>
                            <Label Content=" ~ " Foreground="White" FontSize="15"/>
                            <Label Content="{Binding Selected[4]}" Foreground="White" FontSize="15"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                
            </Grid>
            
            <!-- 확인/취소버튼 -->
            <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Width="130" Height="50" HorizontalAlignment="Center" 
                    Content="확인" Margin="10" FontSize="20" 
                    Style="{StaticResource MahApps.Styles.Button}" Background="#B71000" 
                    cal:Message.Attach="[Event Click] = [Action Next2($source, $eventArgs)]"
                />

                <Button Width="130" Height="50" HorizontalAlignment="Center" 
                    Content="취소" Margin="10" FontSize="20"
                    Style="{StaticResource MahApps.Styles.Button}" Background="#B71000" 
                    cal:Message.Attach="[Event Click] = [Action Cancel2($source, $eventArgs)]"
                />
            </StackPanel>

        </Grid>
        
        
        
        <StatusBar Grid.Row="1">
            
        </StatusBar>
            
    </Grid>
</mah:MetroWindow>
