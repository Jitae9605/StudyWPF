<Window x:Class="WPF_BasicApp2.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BasicApp2"
        mc:Ignorable="d"
        Title="SubWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- 그리드의 사이즈를 자식개체(여기서는 button) 이 그대로 계승해서 꽉채워차지 -->
        <Grid Grid.Column="0" Height="60" Width="100" Background="LightBlue">
            <Button Content="A"/>
        </Grid>
        
        <!-- 뷰박스에 버튼을 넣었을때 그리드에 의해 뷰박스가 늘어나면서 버튼의 글자크기도 커진다.  -->
        <Grid Grid.Column="1" Height="90" Width="100" Background="LightBlue">
            <Viewbox>
                <Button Content="A"/>
            </Viewbox>
        </Grid>
        
        <!-- 이들은 벡터이미지라 확대해도 그래픽/이미지 형상등이 깨지지 않는다(= 계단현상 없음)-->
        <Grid Grid.Column="2" Height="90" Width="100" Background="LightBlue">
            <Viewbox Stretch="Fill">
                <Button Content="A"/>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
